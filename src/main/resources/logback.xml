<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Personaliza el patrÃ³n para colores -->
            <pattern>
                <!-- Colores personalizados para cada nivel -->
                %d{HH:mm:ss} [%highlight(%p)] %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
